<phone:PhoneApplicationPage
    x:Class="YoutubeVideoSampleWP80.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:conv="clr-namespace:YoutubeVideoSampleWP80.Converters"
    xmlns:rma="clr-namespace:RateMyApp.Controls;assembly=RateMyApp"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    shell:SystemTray.IsVisible="True">
    <phone:PhoneApplicationPage.Resources>
        <!--<conv:ImgPathBlurConverter x:Key="ImgPathBlur" />-->

        <DataTemplate x:Key="VideoDataTemplate">
            <Grid Margin="0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Grid.ColumnSpan="2" Canvas.ZIndex="-1" Background="#000000" Width="Auto" Height="Auto" CornerRadius="6"></Border>
                <Border Grid.Column="0" Width="Auto" Height="Auto" CornerRadius="6,0,0,6">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding Thumbnail}" Stretch="UniformToFill" />
                    </Border.Background>
                </Border>
                <!--Background="{Binding Converter={StaticResource RowColour}}"-->
                <Border Grid.Column="1" Width="Auto" Height="Auto" CornerRadius="0,6,6,0">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding BlurBgSource, Mode=OneWay}" Stretch="UniformToFill" Opacity="0.5" />
                    </Border.Background>
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Foreground="White" Text="{Binding Title}" TextAlignment="Center" TextWrapping="Wrap" HorizontalAlignment="Center" />
                        <TextBlock Grid.Row="1" Grid.Column="0" Foreground="White" Text="{Binding ViewCount}" />
                        <TextBlock Grid.Row="1" Grid.Column="1" Foreground="White" Text="{Binding Likes}" />
                        <TextBlock Grid.Row="2" Grid.Column="0" Foreground="White" Text="{Binding Duration}" />
                    </Grid>
                </Border>
            </Grid>
        </DataTemplate>
    </phone:PhoneApplicationPage.Resources>

    <!--Data context is set to sample data above and LayoutRoot contains the root grid where all other page content is placed-->
    <Grid x:Name="LayoutRoot" >
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="../Assets/Images/bg.jpg" AlignmentY="Top" AlignmentX="Center" Opacity="0.3"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="TitlePanel" Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Source="/larva2.png" Height="90" Width="90"/>
            <TextBlock Grid.Column="1" VerticalAlignment="Center" x:Name="PageTitle" Text="Larva Cartoon" Foreground="White"
                       FontSize="48" FontWeight="ExtraLight" FontFamily="/YoutubeVideoSampleWP80;component/Fonts/Fonts.zip#VNF Cinnamon Cake"/>

        </Grid>

        <!--ContentPanel contains ListBox and ListBox ItemTemplate. Place additional content here-->
        <Grid x:Name="ContentPanel" Grid.Row="1" Margin="12,0,12,0">
            <phone:LongListSelector x:Name="ChannelVideos" SelectionChanged="VideosList_SelectionChanged" Visibility="Collapsed" ItemTemplate="{StaticResource VideoDataTemplate}"/>
            <ProgressBar x:Name="ChannelProgress" Foreground="White" VerticalAlignment="Center" IsIndeterminate="True" />
            <Grid Grid.Row="0" VerticalAlignment="Bottom" Height="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="1" Width="50" Height="50" Source="../Assets/Icons/Previous.png" MouseEnter="PreviousClick"/>
                <TextBlock Grid.Column="2" Padding="0,6,0,0" Foreground="White" FontSize="24" FontWeight="Light" TextWrapping="Wrap" TextAlignment="Center" Text="1"  VerticalAlignment="Center" x:Name="CurrentPageXaml" Height="50"/>
                <Image Grid.Column="3" Width="50" Height="50" Source="../Assets/Icons/Next.png" MouseEnter="NextClick"/>
                <Image Grid.Column="4" Width="50" Height="50" Source="../Assets/Icons/Search.png" MouseEnter="SearchClick"/>
            </Grid>
        </Grid>

        <rma:FeedbackOverlay x:Name="FeedbackOverlay" 
                             Grid.RowSpan="2" 
                             FeedbackTo="nvtang.khtn@gmail.com" 
                             ApplicationName="#Larva Cartoon" 
                             CompanyName="VTA Media" 
                             EnableAnimation="False"/>
    </Grid>

    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar Mode="Default">
            <shell:ApplicationBarIconButton IconUri="/Assets/Icons/published.png" Text="date" Click="PublishedClick"/>
            <shell:ApplicationBarIconButton IconUri="/Assets/Icons/viewCount.png" Text="views" Click="ViewCountClick"/>
            <shell:ApplicationBarIconButton IconUri="/Assets/Icons/rating.png" Text="likes" Click="RatingClick"/>
            <shell:ApplicationBar.MenuItems>
                <shell:ApplicationBarMenuItem Text="reload"  Click="ReloadClick"/>
                <shell:ApplicationBarMenuItem Text="rate and review" Click="RateAndReviewClick"/>
                <shell:ApplicationBarMenuItem Text="feedback"  Click="FeedbackClick"/>
                <!--<shell:ApplicationBarMenuItem Text="other apps"/>-->
            </shell:ApplicationBar.MenuItems>
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>
</phone:PhoneApplicationPage>